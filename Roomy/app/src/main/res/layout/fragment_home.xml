<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Bills Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_card_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardElevation="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">

                        <TextView
                            android:id="@+id/home_title_bills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/title_bills"
                            android:textAllCaps="true"
                            android:textColor="@color/text_secondary_grey"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/home_add_bills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:layout_marginEnd="16dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            app:icon="@drawable/ic_baseline_add_24"
                            app:iconTint="@color/colorAccent"
                            style="?attr/borderlessButtonStyle"
                            app:layout_constraintTop_toTopOf="@id/home_title_bills"
                            app:layout_constraintBottom_toBottomOf="@id/home_title_bills"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/home_subtitle_divider_bills"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/section_divider"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_grid_bills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fillViewport="true"
                        android:scrollbars="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="24dp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>